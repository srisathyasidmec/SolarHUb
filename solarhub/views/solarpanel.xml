<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_solar_form" model="ir.ui.view">
        <field name="model">solar.panel</field>
        <field name="arch" type="xml">
            <form string="Solarhub">
                <sheet>
                    <sheet>
                        <div class="oe_title">
                            <h1 style="color: #00aaff;">
                                <field name="solar_sequence" readonly="1"/>
                            </h1>
                        </div>
                        <group col="3">
                            <separator string="SOLAR PANEL" colspan="4"/>
                            <group>
                                <field name="company_name"/>
                                <field name="panel"/>
                                <field name="current"/>
                                <!-- <field name="tax"/> -->
                            </group>
                            <group>
                                <field name="model"/>
                                <field name="wattage"/>
                                <field name="degrade"/>
                                <field name="total_cost"/>
                            </group>
                            <group>
                                <field name="serial"/>
                                <field name="voltage"/>
                                <field name="price"/>
                                <field name="availablestock"/>
                            </group>
                        </group>
                    </sheet>
                    <br/>
                    <sheet>
                        <group col="3">
                            <separator string="ENERGY DETAIL" colspan="4"/>
                            <group>
                                <field name="energyproduce"/>
                                <field name="gridexport"/>
                            </group>
                            <group>
                                <field name="energyconsume"/>
                                <field name="warrantycover" widget="boolean"/>
                            </group>
                            <group>
                                <field name="batterystorage"/>
                                <field name="warrantynotcover" widget="boolean"/>
                            </group>
                        </group>
                    </sheet>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_solar_list" model="ir.ui.view">
        <field name="name">solar</field>
        <field name="model">solar.panel</field>
        <field name="arch" type="xml">
            <list string="solarhub">
                <field name="solar_sequence" string="SOLAR PANEL" optional="show"/>
                <field name="model" string="MODEL NAME" optional="show"/>
                <field name="company_name" string="COMPANY NAME" optional="show"/>
                <field name="serial" string="SERIAL NUMBER" optional="show"/>
                <field name="panel" string="PANEL TYPE" optional="show"/>
                <field name="availablestock" string="AVAILABLE STOCK" optional="show"/>
                <field name="price" string="PRICE" optional="show"/>
                <!--                    <field name="tax" string="TAX" optional="show"/>-->
                <field name="total_cost" string="TOTAL COST" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_solar_panel" model="ir.actions.act_window">
        <field name="name">solar</field>
        <field name="res_model">solar.panel</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_solar_list"/>
    </record>
</odoo>