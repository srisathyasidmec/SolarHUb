<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_property_form" model="ir.ui.view">
        <field name="model">system.property</field>
        <field name="arch" type="xml">
            <form string="property">
                <sheet>
                    <h4>TITLE</h4>
                    <field name="title"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <record id="view_property_list" model="ir.ui.view">
        <field name="name">property</field>
        <field name="model">system.property</field>
        <field name="arch" type="xml">
            <list string="service">
                <field name="title" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_system_property" model="ir.actions.act_window">
        <field name="name">solar</field>
        <field name="res_model">system.property</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_property_list"/>
    </record>
</odoo>